<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Form view (editable) -->
    <record id="view_product_template_form_inherit_quality" model="ir.ui.view">
        <field name="name">product.template.form.inherit.quality</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="x_quality_status"/>
            </xpath>

        </field>
    </record>

    <!-- Tree view (colored badge) -->
    <record id="view_product_template_tree_inherit_quality" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.quality</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
                <field name="x_quality_status"
                       widget="badge"
                       decoration-success="x_quality_status == 'good'"
                       decoration-warning="x_quality_status == 'average'"
                       decoration-danger="x_quality_status == 'bad'"/>
            </xpath>

        </field>
    </record>

</odoo>
