<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_task_form_inherit_progress" model="ir.ui.view">
        <field name="name">project.task.form.inherit.progress</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='user_ids']" position="after">
                <!-- Editable value -->
                <field name="x_progress"/>

                <!-- Visual progress bar -->
                <field name="x_progress" widget="progressbar"/>
            </xpath>

        </field>
    </record>

    <record id="view_task_kanban_inherit_progress" model="ir.ui.view">
        <field name="name">project.task.kanban.inherit.progress</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">

            <xpath expr="//div[contains(@class, 'o_kanban_record_body')]" position="inside">
                <field name="x_progress" widget="progressbar"/>
            </xpath>

        </field>
    </record>

</odoo>
