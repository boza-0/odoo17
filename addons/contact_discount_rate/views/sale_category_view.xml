<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_sale_category" model="ir.actions.act_window">
        <field name="name">Categorías Personalizadas</field>
        <field name="res_model">x_sale_category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sale_category_root"
              name="Categorías Personalizadas"
              parent="sale.sale_menu_root"
              action="action_sale_category"/>

    <!-- Form view -->
    <record id="view_sale_category_form" model="ir.ui.view">
        <field name="name">x.sale.category.form</field>
        <field name="model">x_sale_category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_sale_category_tree" model="ir.ui.view">
        <field name="name">x.sale.category.tree</field>
        <field name="model">x_sale_category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>
